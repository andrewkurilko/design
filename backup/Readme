mkdir backup
cd backup
wget https://github.com/mikbill/design/raw/master/backup/SYS_backup.sh
wget https://github.com/mikbill/design/raw/master/backup/SYS_backup.conf
chmod +x SYS_backup.sh

mcedit /etc/crontab
# Mikbill backup
00 06 * * * root /home/backup/SYS_backup.sh

